@model IEnumerable<LOTR_Web.Models.ViewModels.ForoViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section class="foroSection">
   
    @foreach (var item in Model)
    {
        <div class="container">

            <div class="container-usario">
                <div class="headerPost">
                    <div class="profile-pic">
                        <img src="/img/6.jpg" alt="Foto">
                    </div>
                    <label class="nameForo">Alexis</label>

                    <label class="dateForo">@item.Fecha.ToShortDateString()</label>
                </div>
                <p class="txtPost">
                    @item.Texto
                </p>
                @if (item.Archivo)
                {

                    <img src="~/publicaciones/@(item.Id).png" class="postFoto" alt="">
                }

                <div class="iconos">
                    <button>
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 20"><path fill="currentColor" d="M2 9.137C2 14 6.02 16.591 8.962 18.911C10 19.729 11 20.5 12 20.5s2-.77 3.038-1.59C17.981 16.592 22 14 22 9.138c0-4.863-5.5-8.312-10-3.636C7.5.825 2 4.274 2 9.137Z" /></svg>
                    </button>
                </div>
            </div>
        </div>
    }


</section>
