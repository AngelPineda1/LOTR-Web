@model LOTR_Web.Models.ViewModels.RegistrarseViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "Layout";
}
<div class="form-container">
    <form class="form" method="post" action="~/Home/Registrarse" enctype="multipart/form-data">
        <span class="tittle ch">Crea Una Cuenta</span>
        <input required type="text" class="input" asp-for="Nombre" placeholder="Usuario"/>
        <input required type="email" class="input" asp-for="Correo" placeholder="Correo@example"/>
        <input required type="password" class="input" asp-for="Contraseña" placeholder="Contraseña"/>
        <label>Foto de perfil</label>
        <input type="file" asp-for="Foto"/>
        <button>Enviar</button>
        <span class="fondo">¿Ya Tienes Una Cuenta? <a href="~/Home/Login">Iniciar Sesion</a></span>
        <p class="errors">@Html.ValidationSummary(true)</p>
    </form>
</div>