@model IEnumerable<LOTR_Web.Models.ViewModels.LibrosViewModel>
@{
    Layout = "Layout";

}
<div class="librosContainer">
@foreach (var item in Model)
{
    
    <div class="libro">
        <a href="~/Libros/VerDetalles/@item.Nombre.Replace(" ","-")">
            <img src="~/libros/@(item.Id).png" alt="@item.Nombre" style="width: 200px;">
            <h2>@item.Nombre</h2>
        </a>
    </div>
    
}
</div>